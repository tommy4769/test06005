 <TextView
     android:id="@+id/textView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="1212"
     android:layout_below="@id/business"
    />
  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1212"
      android:layout_below="@id/textView"
      />


</RelativeLayout>